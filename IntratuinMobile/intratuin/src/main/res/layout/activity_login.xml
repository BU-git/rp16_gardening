<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout
    android:id="@+id/rlLogin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context="nl.intratuin.LoginActivity">

    <ImageView
        android:id="@+id/ivIntratuin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FFF8DC"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log-in //fb"
        android:id="@+id/bFacebook"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/ivIntratuin"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log-in //TW"
        android:id="@+id/bTwitter"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/bFacebook"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/bFacebook"
        android:layout_alignStart="@+id/bFacebook" />

    <EditText
        android:id="@+id/etEmailAddress"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="@string/email"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/bTwitter"
        android:background="@drawable/textedit"
        android:password="false" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:inputType="textPassword|text"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:hint="@string/pass"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/textedit"
        android:layout_below="@id/etEmailAddress"
        android:maxLength="15" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remember"
        android:layout_marginLeft="10dp"
        android:background="#FFF8DC"
        android:layout_below="@id/etPassword"
        android:id="@+id/cbRemember" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/showpass"
        android:id="@+id/cbShow"
        android:background="#FFF8DC"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/cbRemember"
        android:layout_alignRight="@+id/bLogin"
        android:layout_alignEnd="@+id/bLogin" />

    <Button
        android:id="@+id/bLogin"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:text="@string/logbut"
        android:layout_below="@id/cbRemember"
        android:clickable="false" />

<!--
     <com.facebook.login.widget.LoginButton
        android:id="@+id/bLoginFacebook"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" /> -->

    <Button
        android:id="@+id/bRegister"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:text="@string/register"
        android:textSize="10sp"
        android:background="@drawable/button"
        android:clickable="false"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/bLogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bForgot"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:textSize="10sp"
        android:text="@string/forgotpass"
        android:layout_below="@+id/bRegister"
        android:background="@drawable/button"
        android:clickable="false"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true" />

   <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="#000000"
        android:textSize="10sp"
        android:background="#FFF8DC"
       android:textAlignment="center"
       android:layout_below="@+id/bForgot"
       android:layout_alignLeft="@+id/bLogin"
       android:layout_alignStart="@+id/bLogin"
       android:layout_alignRight="@+id/bLogin"
       android:layout_alignEnd="@+id/bLogin" />

</RelativeLayout>

</ScrollView>
