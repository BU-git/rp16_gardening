<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:gravity="left"
    android:orientation="vertical"
    tools:context="nl.intratuin.RegisterActivity">


    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:inputType="textCapWords|textPersonName"
        android:hint="First name"
        android:maxLength="100"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/bBirthday"
        android:layout_alignEnd="@+id/bBirthday" />

    <EditText
        android:id="@+id/etTussen"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:hint="Tussenvoegsel"
        android:layout_below="@+id/etFirstName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="text"
        android:maxLength="10" />

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Last name"
        android:layout_below="@+id/etTussen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="textCapWords|textPersonName"
        android:maxLength="100" />


    <Button
        android:id="@+id/bSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign-up"
        android:layout_toRightOf="@+id/tvResult"
        android:layout_above="@+id/tvResult"
        android:layout_alignRight="@+id/cbShowRePassword"
        android:layout_alignEnd="@+id/cbShowRePassword" />

    <Button
        android:id="@+id/bBirthday"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day of birth"
        android:layout_below="@+id/etPostcode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:text="Sex"
        android:layout_above="@+id/bSignUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="62dp"
            android:text="Male"
            android:layout_alignTop="@+id/tvFN"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="62dp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_below="@+id/etFirstName"
            android:layout_alignLeft="@+id/rbMale"
            android:layout_alignStart="@+id/rbMale" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_below="@+id/etLastName"
        android:maxLength="60" />

    <EditText
        android:id="@+id/etCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="City"
        android:layout_below="@+id/etEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="textCapWords"
        android:maxLength="60" />

    <EditText
        android:id="@+id/etStreet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Street"
        android:layout_below="@+id/etCity"
        android:layout_toLeftOf="@+id/bSignUp"
        android:layout_toStartOf="@+id/bSignUp"
        android:maxLength="60"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/etHouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="House"
        android:layout_below="@+id/etCity"
        android:layout_toRightOf="@+id/etStreet"
        android:layout_toEndOf="@+id/etStreet"
        android:inputType="text"
        android:maxLength="5" />

    <EditText
        android:id="@+id/etPostcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Postcode"
        android:layout_below="@+id/etHouse"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:maxLength="10" />

    <TextView
        android:id="@+id/tvBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:enabled="false"
        android:textSize="25dp"
        android:layout_above="@+id/etPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#020202" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:layout_below="@+id/bBirthday"
        android:layout_toStartOf="@+id/cbShowPassword"
        android:layout_toLeftOf="@+id/cbShowPassword"
        android:inputType="textPassword"
        android:maxLength="15" />

    <EditText
        android:id="@+id/etRePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Re-enter password"
        android:layout_below="@+id/etPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword"
        android:maxLength="15"
        android:inputType="textPassword" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show  "
        android:id="@+id/cbShowPassword"
        android:layout_below="@+id/bBirthday"
        android:layout_alignRight="@+id/bBirthday"
        android:layout_alignEnd="@+id/bBirthday" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show  "
        android:id="@+id/cbShowRePassword"
        android:layout_below="@+id/etPassword"
        android:layout_toRightOf="@+id/etPassword"
        android:layout_toEndOf="@+id/etPassword" />

    <Button
        android:id="@+id/bCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_below="@+id/rgGender"
        android:layout_toLeftOf="@+id/bSignUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number|text"
        android:hint="Cellphone number"
        android:layout_below="@+id/etRePassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLength="20" />


</RelativeLayout>