<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context="nl.intratuin.RegisterActivity">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivIntratuin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:inputType="text"
        android:iconifiedByDefault="false"

        android:hint="@string/search"
        android:textColorHint="@color/colorAccent"
        android:drawableLeft="@drawable/search_icon">
    </AutoCompleteTextView>
    <!--android:searchIcon="@drawable/search_icon"-->

    <ImageView
        android:id="@+id/ivIntratuin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@drawable/logo">

        <!--What is this?-->
        <requestFocus />
    </ImageView>


    <!-- Need to resize category_picture.png -->
    <ImageView
        android:id="@+id/ivCategoryPicture"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"

        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scaleType="centerCrop"
        android:src="@drawable/category_picture">
    </ImageView>

    <!-- It's just a text-->
    <Button
        android:id="@+id/textCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_action"
        android:text="@string/categories"
        android:clickable="false"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        >
    </Button>

    <ListView
        android:id="@+id/lSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:divider="@color/colorAccent"
        android:dividerHeight="1px"
        android:layout_weight="0.1"
        android:ems="10"
        android:scrollIndicators="right" />

    <GridLayout
        android:id="@+id/searchButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|fill_horizontal"
        android:columnCount="3"
        android:orientation="horizontal"

        >
        <ImageButton
            android:id="@+id/bSearchBarcode"
            android:src="@drawable/search_barcode"
            android:clickable="true"
            android:background="@drawable/gradient"
            >
        </ImageButton>
        <ImageButton
            android:id="@+id/bSearchMan"
            android:src="@drawable/search_man"
            android:background="@drawable/gradient"
            android:clickable="true"
            android:layout_gravity="fill_horizontal"
            >
        </ImageButton>
        <ImageButton
            android:id="@+id/bSearchBasket"
            android:src="@drawable/search_basket"
            android:clickable="true"
            android:background="@drawable/gradient"
            >
        </ImageButton>
    </GridLayout>
</LinearLayout>